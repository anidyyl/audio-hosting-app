# Main domain - serves the Next.js frontend
localhost:80 {

    # Gzip compression
    encode gzip

    # Security headers
    header {
        Access-Control-Allow-Origin http://localhost
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        Access-Control-Allow-Credentials true
        # Security headers
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

        # Remove server header
        -Server
    }

    # Health check endpoints
    handle_path /health/users {
        rewrite * /health
        reverse_proxy user-service:8001
    }

    handle_path /health/audio {
        rewrite * /health
        reverse_proxy audio-service:8002
    }

    # API routes - proxy to microservices
    handle /api/auth/* {
        reverse_proxy user-service:8001
    }
 
    handle /api/users/* {
        reverse_proxy user-service:8001
    }

    handle /api/audio/* {
        reverse_proxy audio-service:8002
    }

    # Static file serving for uploaded audio files
    handle_path /uploads/* {
        root * /app/uploads
        file_server
    }

    # Serve Next.js app (catch-all)
    reverse_proxy frontend:3000

    # Logging
    log {
        output file /var/log/caddy/access.log {
            roll_size 10mb
            roll_keep 5
        }
        format json
    }
}
